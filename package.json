{
  "name": "ward-bulletin",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --template src/template.html --no-prerender",
    "serve": "preact build --template src/template.html --no-prerender && preact serve",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "cheerio": "^1.0.0-rc.2",
    "eslint": "^5.15.1",
    "eslint-config-synacor": "^3.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.3.0",
    "per-env": "^1.0.2",
    "preact-cli": "^2.2.1",
    "preact-render-spy": "^1.3.0"
  },
  "dependencies": {
    "firebase": "^5.8.6",
    "firebaseui": "^3.5.2",
    "marked": "^0.6.2",
    "mini-platform-detect": "^0.1.0",
    "node-fetch": "^2.3.0",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.4",
    "preact-router": "^2.6.1"
  }
}
